  <div class="card">
    <div class="card-header">
      <h2>Forgot your password?</h2>
    </div>
    <div class="card-body">
      <h5 class="card-title">No worries!</h5>
      <p class="card-text">123456 is a great password, or anything related to cats.</p>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field form-group">
          <% f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email address to send reset link to" %>
        </div>

        <br>

        <div class="actions">
          <button class="btn btn-primary" type="submit">Submit</button>
          <br><br>
        </div>

      <% end %>

  </div>
</div>

<br>

<%= render "devise/shared/links" %>
